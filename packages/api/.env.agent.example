# Agent Configuration Environment Variables
# These variables control agent behavior and LLM parameters
# Copy this file to .env.local and customize the values

# ============================================================================
# LLM MODEL PARAMETERS
# ============================================================================

# Temperature: Controls randomness of responses (0.0 = deterministic, 1.0 = very creative)
# Default: 0.6
# Recommended for research: 0.5-0.7
AGENT_TEMPERATURE=0.6

# Top P: Nucleus sampling - controls diversity (0.0-1.0)
# Default: 0.9
AGENT_TOP_P=0.9

# Top K: Limits vocabulary selection to top K tokens (1-100)
# Default: 40
AGENT_TOP_K=40

# Frequency Penalty: Reduces repetition (-2.0 to 2.0)
# Default: 0.5
AGENT_FREQUENCY_PENALTY=0.5

# Presence Penalty: Encourages new topics (-2.0 to 2.0)
# Default: 0.3
AGENT_PRESENCE_PENALTY=0.3

# Max tokens for brief responses
# Default: 300
AGENT_MAX_TOKENS_BRIEF=300

# Max tokens for standard responses
# Default: 1500
AGENT_MAX_TOKENS_STANDARD=1500

# Max tokens for comprehensive responses
# Default: 3500
AGENT_MAX_TOKENS_COMPREHENSIVE=3500

# Max tokens for extended responses
# Default: 5000
AGENT_MAX_TOKENS_EXTENDED=5000

# ============================================================================
# RESEARCH SESSION CONFIGURATION
# ============================================================================

# Enable automatic extraction of research points from responses
# Default: true
AGENT_AUTO_EXTRACT_POINTS=true

# Maximum number of research points to extract per response
# Default: 5
AGENT_MAX_RESEARCH_POINTS=5

# Minimum paragraph length to consider for research points (characters)
# Default: 20
AGENT_MIN_POINT_LENGTH=20

# Maximum length for research point topics (characters)
# Default: 50
AGENT_MAX_TOPIC_LENGTH=50

# Maximum length for research point insights (characters)
# Default: 200
AGENT_MAX_INSIGHT_LENGTH=200

# Default confidence score for AI-extracted findings (0.0-1.0)
# Default: 0.85
AGENT_DEFAULT_CONFIDENCE=0.85

# Save findings to database
# Default: true
AGENT_SAVE_FINDINGS=true

# Research session timeout in milliseconds
# Default: 60000 (60 seconds)
AGENT_RESEARCH_TIMEOUT_MS=60000

# ============================================================================
# COMPANY DETECTION CONFIGURATION
# ============================================================================

# Enable automatic company name extraction from questions
# Default: true
AGENT_AUTO_EXTRACT_COMPANY=true

# Auto-create companies if they don't exist
# Default: true
AGENT_AUTO_CREATE_COMPANY=true

# Default industry when auto-creating companies
# Default: "Not specified"
AGENT_DEFAULT_INDUSTRY=Not specified

# Fallback company name for generic queries
# Default: "General Research"
AGENT_FALLBACK_COMPANY_NAME=General Research

# ============================================================================
# RESPONSE GENERATION CONFIGURATION
# ============================================================================

# Use section headers in research reports
# Default: true
AGENT_USE_SECTION_HEADERS=true

# Show confidence scores in output
# Default: true
AGENT_SHOW_CONFIDENCE_SCORES=true

# Show source attribution in findings
# Default: true
AGENT_SHOW_SOURCES=true

# Default source attribution for AI-generated content
# Default: "AI Research Assistant"
AGENT_DEFAULT_SOURCE=AI Research Assistant

# Timestamp format: ISO, RELATIVE, or NONE
# Default: ISO
AGENT_TIMESTAMP_FORMAT=ISO

# ============================================================================
# BEHAVIOR CONFIGURATION
# ============================================================================

# Ask clarifying questions for ambiguous queries
# Default: true
AGENT_ASK_CLARIFICATIONS=true

# Maximum number of clarification questions to ask
# Default: 2
AGENT_MAX_CLARIFICATIONS=2

# Provide alternative interpretations for ambiguous queries
# Default: true
AGENT_PROVIDE_ALTERNATIVES=true

# Acknowledge limitations and uncertainties
# Default: true
AGENT_ACKNOWLEDGE_LIMITATIONS=true

# Company name matching threshold (0.0-1.0)
# Higher = stricter matching
# Default: 0.7
AGENT_COMPANY_MATCH_THRESHOLD=0.7

# Suggest related companies or topics
# Default: true
AGENT_SUGGEST_RELATED=true

# Provide next steps or follow-up recommendations
# Default: true
AGENT_PROVIDE_NEXT_STEPS=true

# ============================================================================
# QUALITY CONTROL CONFIGURATION
# ============================================================================

# Minimum response length to avoid trivial answers (characters)
# Default: 50
AGENT_MIN_RESPONSE_LENGTH=50

# Check for potentially harmful information
# Default: true
AGENT_SAFETY_CHECK_ENABLED=true

# Verify factual accuracy where possible
# Default: true
AGENT_FACT_CHECK_ENABLED=true

# Flag speculative or uncertain information
# Default: true
AGENT_FLAG_SPECULATION=true

# Minimum confidence threshold for extracting findings (0.0-1.0)
# Default: 0.5
AGENT_MIN_CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Enable response caching for identical queries
# Default: true
AGENT_CACHE_ENABLED=true

# Cache TTL in seconds
# Default: 3600 (1 hour)
AGENT_CACHE_TTL_SECONDS=3600

# Enable streaming responses
# Default: false
AGENT_STREAMING_ENABLED=false

# Enable batch processing for multiple research points
# Default: true
AGENT_BATCH_PROCESSING=true

# Batch size for processing research points
# Default: 5
AGENT_BATCH_SIZE=5

